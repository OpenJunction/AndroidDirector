<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >


<LinearLayout
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="30dip"
    android:paddingBottom="30dip"
    android:paddingLeft="30dip"
    android:paddingRight="30dip"
    >

<Button android:id="@+id/button_start" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="New Activity" android:drawableLeft="@android:drawable/ic_menu_share" android:textSize="20sp" android:paddingBottom="10dip" android:paddingTop="10dip">
</Button>


<Button android:id="@+id/button_scan" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="Scan In" android:drawableLeft="@drawable/share_menu_item" android:textSize="20sp" android:paddingBottom="10dip" android:paddingTop="10dip">
</Button>

<Button android:id="@+id/button_local" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="Nearby Activities" android:drawableLeft="@android:drawable/ic_menu_compass" android:textSize="20sp" android:paddingBottom="10dip" android:paddingTop="10dip">
</Button>

<Button android:id="@+id/button_env" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="Environment" android:drawableLeft="@android:drawable/ic_menu_myplaces" android:textSize="20sp" android:paddingBottom="10dip" android:paddingTop="10dip">
</Button>

